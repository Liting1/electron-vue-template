{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./app/",
    "resolveJsonModule": true,
    "lib": ["es6", "es2020", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@render/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src", "./scripts", "shims-vue.d.ts"]
}
