{
  "compilerOptions": {
    "module": "Commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./app/",
    "resolveJsonModule": true, // 允许引入json文件作为一个模块
    "lib": ["es6", "es2020", "DOM"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src", "scripts", "shims-vue.d.ts"],
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"],
    "@render/*": ["src/render/*"]
  }
}
